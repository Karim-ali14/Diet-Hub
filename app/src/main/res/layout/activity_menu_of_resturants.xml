<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuOfResturantsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AppBerMenu">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مطعم الليمونة"
                android:layout_gravity="center"
                android:textSize="26dp"
                android:textColor="#000"
                />
            <LinearLayout
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_shopping_basket_black_24dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    />
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_favorite"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_gravity="right"
                android:onClick="BackButton"
                />
        </androidx.appcompat.widget.Toolbar>
        <RatingBar
            android:rating="2"
            android:id="@+id/RatingMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:scaleX="1.5"
            android:scaleY="1.5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:theme="@style/RatingBarForDetails"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            />
        <RelativeLayout
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="73dp"
                android:src="@drawable/lamon"
                android:id="@+id/Icon"/>
            <LinearLayout
                android:layout_margin="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:background="@drawable/style_of_sylary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تفاصيل"
                        android:textSize="19dp"
                        android:textColor="@color/background"
                        android:layout_margin="1dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="13dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="13dp"
                    android:background="@drawable/style_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_assignment_black_24dp"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="باقات"
                        android:textSize="19dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_margin="1dp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.tabs.TabLayout
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab"
        android:layout_below="@id/AppBerMenu"
        app:tabTextColor="@color/text"
        app:tabSelectedTextColor="#000"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        >
    </com.google.android.material.tabs.TabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tab"
        android:background="@color/colorLine"
        android:id="@+id/Line"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/viewPagerMenu"
        android:layout_below="@id/tab"
        >

    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>